{
  "name": "Paradox Alarm Interface",
  "version": "2.2.5",
  "slug": "paradox_alarm_interface",
  "description": "Paradox Alarm Interface. Supports SP/MG/EVO, Serial and IP150 connections.",
  "uart": true,
  "url": "https://github.com/ParadoxAlarmInterface/pai",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "usb": true,
  "map": [
    "share:rw",
    "config:ro"
  ],
  "environment": {
     "PAI_CONFIG_FILE": "/data/options.json"
  },
  "ports": {
      "10000/tcp": 10000
  },
  "ports_description": {
    "10000/tcp": "For IP connection from Babyware"
  },
  "options": {
    "LOGGING_FILE": null,
    "LOGGING_LEVEL_CONSOLE": 20,
    "LOGGING_LEVEL_FILE": 40,
    "LOGGING_DUMP_PACKETS": false,
    "LOGGING_DUMP_MESSAGES": false,
    "LOGGING_DUMP_STATUS": false,
    "LOGGING_DUMP_EVENTS": false,
    "CONNECTION_TYPE": null,
    "SERIAL_PORT": "/dev/ttyUSB0",
    "SERIAL_BAUD": 9600,
    "IP_CONNECTION_HOST": "127.0.0.1",
    "IP_CONNECTION_PORT": 10000,
    "IP_CONNECTION_PASSWORD": "paradox",
    "IP_CONNECTION_SITEID": null,
    "IP_CONNECTION_EMAIL": null,
    "IP_CONNECTION_PANEL_SERIAL": null,
    "IP_CONNECTION_BARE": false,
    "SYNC_TIME": true,
    "PASSWORD": "0000",
    "MQTT_ENABLE": true,
    "MQTT_HOST": "core-mosquitto",
    "MQTT_PORT": 1883,
    "MQTT_USERNAME": "pai",
    "MQTT_PASSWORD": "my_very_secure_password",
    "MQTT_RETAIN": true,
    "MQTT_BIND_ADDRESS": "127.0.0.1",
    "MQTT_BIND_PORT": 0,
    "MQTT_HOMEASSISTANT_AUTODISCOVERY_ENABLE": true
  },
  "schema": {
    "LOGGING_FILE": "str?",
    "LOGGING_LEVEL_CONSOLE": "int",
    "LOGGING_LEVEL_FILE": "int",
    "LOGGING_DUMP_PACKETS": "bool",
    "LOGGING_DUMP_MESSAGES": "bool",
    "LOGGING_DUMP_STATUS": "bool",
    "LOGGING_DUMP_EVENTS": "bool",
    "CONNECTION_TYPE": "list(Serial|IP)",
    "SERIAL_PORT": "device",
    "SERIAL_BAUD": "int(1200,)",
    "IP_CONNECTION_HOST": "str",
    "IP_CONNECTION_PORT": "int",
    "IP_CONNECTION_PASSWORD": "str",
    "IP_CONNECTION_SITEID": "str?",
    "IP_CONNECTION_EMAIL": "email?",
    "IP_CONNECTION_PANEL_SERIAL": "str?",
    "IP_CONNECTION_BARE": "bool",
    "SYNC_TIME": "bool",
    "PASSWORD": "password?",
    "MQTT_ENABLE": "bool",
    "MQTT_HOST": "str",
    "MQTT_PORT": "int",
    "MQTT_USERNAME": "str",
    "MQTT_PASSWORD": "password",
    "MQTT_RETAIN": "bool",
    "MQTT_BIND_ADDRESS": "str",
    "MQTT_BIND_PORT": "int",
    "MQTT_HOMEASSISTANT_AUTODISCOVERY_ENABLE": "bool"
  },
  "services": ["mqtt:want"],
  "image": "paradoxalarminterface/pai"
}
